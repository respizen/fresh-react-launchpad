@using Crm.Library.Globalization.Extensions
@using Crm.Library.Modularization.Extensions
@inherits Crm.Library.Modularization.CrmViewUserControl


<ul class="top-menu">
	<li>
		<a href="#/Main/Site/Edit">
			@(Html.Localize("Edit"))
		</a>
	</li>
</ul>

<div class="container">
	<div class="card" id="profile-main">
		<div class="pm-overview c-overflow" tabindex="4" data-bind="with: site">
			<div class="pmo-pic">
				<div class="p-relative">
					<div class="p-25 bgm-white">
						<p class="f-500" data-bind="text: Name"></p>
						<!-- ko if: ExtensionValues().MaterialLogoBase64 -->
						<img class="img-responsive" data-bind="attr: { src: 'data:image/png;base64,' + ExtensionValues().MaterialLogoBase64() }" />
						<!-- /ko -->
					</div>
				</div>
			</div>
			@Html.PluginRenderActions("SiteDetailsSidebar")
		</div>
		<div class="pm-body clearfix">
			<ul class="tab-nav tn-justified" role="tablist" tabindex="1">
				@Html.PluginRenderActions("SiteTabHeader")
			</ul>
			<div class="tab-content">
				@Html.PluginRenderActions("SiteTab")
			</div>
		</div>
	</div>
</div>
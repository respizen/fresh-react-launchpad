@inherits Crm.Library.Modularization.CrmViewPage<Crm.ViewModels.ErrorViewModel>
@using Crm.Library.Globalization.Extensions

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
<title>Ooops. Something went wrong.</title>

<style type="text/css">
	* {
		margin: 0;
		padding: 0;
	}

	body {
		line-height: 1.75em;
		background: #fff;
		font-size: 11.5pt;
		color: #5A6466;
		font-family: serif;
	}

	h2 {
		text-transform: uppercase;
		font-weight: normal;
		font-size: 1.5em;
		font-family: "Open Sans", sans-serif;
		color: #2A3436;
		margin-bottom: 1em;
	}

	img {
		margin: 5px 30px 20px 0;
		min-width: 25%;
	}

	p {
		margin: 1.5em;
	}

	#content {
		padding: 0;
		width: 80%;
		position: relative;
		background: #FFF;
		margin: 1.5em auto;
		box-shadow: 0px 0px 100px 0px rgba(0,0,0,0.15);
		border: solid 1px #ccc;
		max-width: 760px;
	}

	.box {
		margin: 0 0 50px 0;
		text-align: center;
		padding: 20px 40px 0 40px;
	}

	.likeabutton {
		text-decoration: none;
		display: inline-block;
		padding: 10px 18px;
		background: #0099d0;
		color: #fff;
		border: 0;
		cursor: pointer;
	}

	.likeabutton:active {
		background: #005f7f;
	}
</style>
</head>
<body>
	<div id="content" class="page-error">
		<div class="box">
			<h2>[@(Model.StatusCode)] We're sorry, something went wrong</h2>
			<img src="data:image/svg+xml;base64," alt="Something went wrong" title="Something went wrong" />
			<p>
				The operation you requested can't be served at this moment. @(Html.Localize("Error_" + Model.ErrorType))
			</p>
			<p>
				<a href="#" onclick="window.history.go(-1); return false;"><button class="likeabutton">&lt; @(Html.Localize("Back"))</button></a>
				<a href="@(Url.Content("~/"))"><button class="likeabutton">@(Html.Localize("Home"))</button></a>
			</p>				
		</div>
	</div>
</body>
</html>

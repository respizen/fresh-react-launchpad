@inherits Crm.Library.Modularization.CrmViewUserControl<GenericListViewModel>
@using Crm.ViewModels
@using Crm.Library.Globalization.Extensions
@using Crm.Library.Modularization.Extensions

<div class="listview lv-bordered">
	<div class="lv-body row">
		<div class="card-body card-padding">
			<div class="col-xs-12">
				<div data-bind="foreach: items">
					<div class="col-xs-12 col-sm-6 col-lg-3 profile-view">
						<div class="thumbnail">
							<div class="pv-header">
								@Html.PluginRenderActions($"Material{Model.ControllerName}Thumbnail")
							</div>
							<div class="pv-body"></div>
						</div>
					</div>
				</div>
				<!-- ko if: items().length === 0 && isFiltered -->
				<div id="generic-list-empty-state" class="lv-item media">
					<div class="row media-body">
						<div class="col-xs-12">
							<small class="lv-small">@(Html.Localize("NoRecordsForSearchCriteria"))</small>
						</div>
					</div>
				</div>
				<!-- /ko -->
			</div>
		</div>
	</div>
</div>
<!-- ko ifnot: infiniteScroll -->
 @await Html.PartialAsync("MaterialPaging") 
<!-- /ko -->
<!-- ko if: infiniteScroll -->
 @await Html.PartialAsync("Material/GenericListPreloader") 
<!-- /ko -->

@inherits Crm.Library.Modularization.CrmViewUserControl
@using Crm.Library.Modularization.Extensions
@using Crm.Article.Model

<ul class="top-menu">
	@Html.PluginRenderActions("ContactDetailsTopMenu")
</ul>

<div class="container">
	<div class="card" id="profile-main">
		<div class="pm-overview c-overflow" tabindex="4">
			<div class="pmo-pic">
				<!-- ko with: article -->
				<div class="p-relative">
					<div class="lv-avatar-details bgm-gray pv-main">
				</div>
					<div class="p-25 bgm-white">
						<p class="text-center" id="company-legacyname" class="f-500" data-bind="text: Helper.Article.getArticleAutocompleteDisplay($data, $root.currentUser().DefaultLanguageKey)"></p>
						<hr />
						<p class="text-center" data-bind="with: $root.article">
							<span data-bind="lookupValue: ArticleTypeKey, lookups: $root.lookups.articleTypes"></span>
						</p>
					</div>
				</div>
				<!-- /ko -->
			</div>
			@await Html.PartialAsync("ContactDetailsTagBlock", typeof(Article)) 
			@Html.PluginRenderActions("MaterialContactSidebarExtensions")
		</div>
		<div class="pm-body clearfix">
			<ul class="tab-nav tn-justified" role="tablist" tabindex="1">
				@(Html.PluginRenderActions("ArticleDetailsMaterialTabHeader"))
			</ul>
			<div class="tab-content">
				@(Html.PluginRenderActions("ArticleDetailsMaterialTab"))
			</div>
		</div>
	</div>
</div>